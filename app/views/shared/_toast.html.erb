<div data-controller="toast" 
     data-toast-message-value="<%= notice || alert %>"
     data-toast-type-value="<%= notice ? 'notice' : 'alert' %>">
  <div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-toast-target="toast">
      <div class="toast-header <%= notice ? 'bg-success' : 'bg-danger' %> text-white">
        <i class="bi <%= notice ? 'bi-check-square-fill' : 'bi-exclamation-triangle-fill' %> me-2"></i>
        <p class="me-auto mb-0"><%= notice ? '通知' : '警告' %></p>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
      <div class="toast-body">
        <%= notice || alert %>
      </div>
    </div>
  </div>
</div>