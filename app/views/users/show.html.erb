<% breadcrumb :user, @user %>

<% content_for :title, "用户详情" %>

<div class="row mt-3">
  <div class="col-12 col-sm-9">
    <div class="align-items-center p-3 mb-3 bg-primary-subtle rounded shadow-sm clearfix">
      <p class="h5 mb-0 float-start text-primary-emphasis">普通系统用户详情</p>
      <div class="d-flex gap-2 float-end">
        <%= link_to "一览", users_path, class: "btn btn-sm btn-outline-primary" %>
        <%= link_to "编辑", edit_user_path(@user), class: "btn btn-sm btn-primary" %>
        <%= button_to "删除", @user, method: :delete, class: "btn btn-sm btn-danger", data: { turbo_confirm: "确认删除？" } %>
      </div>
    </div>

    <%= render @user %>

    <%= @user.virtual_users.each do |vu| %>
      <%= vu %>
    <% end %>
  </div>
</div>
