<% content_for :title, "新建宝可梦账号关联" %>

<div class="row"> 
  <div class="col-12 col-sm-9">
    <div class="align-items-center p-3 my-3 bg-primary-subtle rounded shadow-sm clearfix">
      <p class="h5 mb-0 float-start text-primary-emphasis">新增宝可梦账户关联</p>
      <%= link_to virtual_user_path(@virtual_user), class: "float-end btn btn-sm btn-primary" do %>
