<% if current_page?(virtual_user) %>
  <div class="list-group-item" id="<%= dom_id(virtual_user) %>">
  <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1"><%= virtual_user.fullname %></h5>
    <small><%= virtual_user.created_at %></small>
  </div>
  <hr class="my-1" />
  <small class="d-inline-flex my-1 px-2 py-1 fw-semibold text-success-emphasis bg-success-subtle border border-success-subtle rounded-2">
    <%= virtual_user.gender %>
  </small>
  <small class="d-inline-flex my-1 px-2 py-1 fw-semibold text-success-emphasis bg-info-subtle border border-success-subtle rounded-2">
    <%= virtual_user.email %>
  </small>
</div>
<% else %>
  <%= link_to virtual_user, class: "list-group-item list-group-item-action", id: dom_id(virtual_user) do %>
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1 link-offset-1"><%= virtual_user.fullname %></h5>
      <small><%= virtual_user.created_at %></small>
    </div>
    <hr class="my-1" />
    <small class="d-inline-flex my-1 px-2 py-1 fw-semibold text-success-emphasis bg-success-subtle border border-success-subtle rounded-2">
      <%= virtual_user.gender %>
    </small>
    <small class="d-inline-flex my-1 px-2 py-1 fw-semibold text-success-emphasis bg-info-subtle border border-success-subtle rounded-2">
      <%= virtual_user.email %>
    </small>
  <% end %>
<% end %>
