<% breadcrumb :virtual_user, @virtual_user %>

<div class="row mt-3">
  <div class="col-12 col-sm-9">
    <div class="align-items-center p-3 mb-3 bg-primary-subtle rounded shadow-sm clearfix">
      <p class="h5 mb-0 float-start text-primary-emphasis">虚拟用户详情</p>
      <div class="d-flex gap-2 float-end">
        <%= link_to "一览", virtual_users_path, class: "btn btn-sm btn-outline-primary" %>
        <%= link_to "编辑", edit_virtual_user_path(@virtual_user), class: "btn btn-sm btn-primary" %>
        <%= button_to "删除", @virtual_user, method: :delete, class: "btn btn-sm btn-danger", data: { turbo_confirm: "确认删除？" } %>
      </div>
    </div>

    <div class="list-group mb-3">
      <%= render @virtual_user %>
    </div>
    <% unless @virtual_user.pokermon %>
      <%= link_to new_virtual_user_pokermon_path(@virtual_user), class: "btn btn-sm btn-primary" do %>
        <svg width="20px" height="20px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path fill-rule="evenodd" clip-rule="evenodd" d="M3 12C3 7.02944 7.02944 3 12 3C16.9706 3 21 7.02944 21 12C21 16.9706 16.9706 21 12 21C7.02944 21 3 16.9706 3 12ZM5.07089 13C5.55612 16.3923 8.47353 19 12 19C15.5265 19 18.4439 16.3923 18.9291 13H14.8293C14.4174 14.1652 13.3062 15 12 15C10.6938 15 9.58251 14.1652 9.17068 13H5.07089ZM18.9291 11C18.4439 7.60771 15.5265 5 12 5C8.47353 5 5.55612 7.60771 5.07089 11H9.17068C9.58251 9.83481 10.6938 9 12 9C13.3062 9 14.4174 9.83481 14.8293 11H18.9291ZM12 13C12.5523 13 13 12.5523 13 12C13 11.4477 12.5523 11 12 11C11.4477 11 11 11.4477 11 12C11 12.5523 11.4477 13 12 13Z" fill="#ffffff"></path> </g></svg>
        创建宝可梦账户关联
      <% end %>
    <% else %>
      <%= render @virtual_user.pokermon %>
      <div class="row mt-3">
        <div class="col-12">
          <%= link_to "注册", register_virtual_user_pokermon_path(@virtual_user, @virtual_user.pokermon), class: "btn btn-primary btn-sm" %>
          <%= link_to "登陆", "#", class: "btn btn-primary btn-sm" %>
          <%= link_to "修改验证后手机/密码", "#", class: "btn btn-success btn-sm" %>
        </div>
      </div>
    <% end %>
    
  </div>
</div>