<%= form_with(model: virtual_user) do |form| %>
  <% if virtual_user.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(virtual_user.errors.count, "error") %> prohibited this virtual_user from being saved:</h2>
      <ul>
        <% virtual_user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3">
    <div class="col">
      <%= form.label :last_name, class: "form-label" %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>
    <div class="col">
      <%= form.label :first_name, class: "form-label" %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :gender, class: "form-label me-4" %>
    <div class="form-check form-check-inline">
      <%= form.radio_button :gender, "男", class: "form-check-input" %>
      <%= form.label :gender_male, "男", class: "form-check-label" %>
    </div>
    <div class="form-check form-check-inline">
      <%= form.radio_button :gender, "女", class: "form-check-input" %>
      <%= form.label :gender_female, "女", class: "form-check-label" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="col">
      <%= form.label :civ_style, class: "form-label" %>
      <%= form.select :civ_style, VirtualUser.civ_styles.keys.map { |k| [VirtualUser.civ_styles[k], k] }, {}, class: "form-select" %>
    </div>
  </div>
  <hr />
  <div class="d-grid gap-2">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
