<% breadcrumb :virtual_users %>

<div class="row">
  <div class="col-12" id="virtual_users">
    <div class="align-items-center p-3 my-3 bg-primary-subtle rounded shadow-sm clearfix">
      <p class="h5 mb-0 float-start text-primary-emphasis">虚拟用户一览</p>
      <% if Current.user.can_manage_virtual_users? %>
        <%= link_to new_virtual_user_path, class: "float-end btn btn-sm btn-primary" do %>
          <i class="bi bi-plus"></i>
          新增虚拟用户
        <% end %>
      <% end %>
    </div>

    <%= render "shared/filter" %>
    
    <div class="row">
      <% @virtual_users.each do |virtual_user| %>
        <div class="col-12 col-sm-6 col-md-4 mb-3">
          <%= render virtual_user %>
        </div>
      <% end %>
    </div>
  </div>
</div>