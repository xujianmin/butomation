<% content_for :title, "抽签计划" %>

<% breadcrumb :lotteries %>

<div class="row">
  <div class="col-12">
    <div class="align-items-center p-3 my-3 bg-primary-subtle rounded shadow-sm clearfix">
      <p class="h5 mb-0 float-start text-primary-emphasis">抽签计划一览</p>
      <%= link_to new_lottery_path, class: "float-end btn btn-sm btn-primary" do %>
        <i class="bi bi-plus"></i>
        新增抽签计划
      <% end %>
    </div>
    <div class="row" id="lotteries">
      <% @lotteries.each do |lottery| %>
        <div class="col-12 col-md-4 mb-3">
          <%= render lottery %>
        </div>
      <% end %>
    </div>
  </div>
</div>
