      <p class="h5 mb-0 float-start text-primary-emphasis">编辑抽签计划</p>
      <%= link_to lotteries_path, class: "float-end btn btn-sm btn-primary" do %>
        <i class="bi bi-list-task"></i>
        抽签计划一览
      <% end %>
    </div>
    <div class="card">
      <div class="card-body">
        <%= render "form", lottery: @lottery %>
      </div>
    </div>
  </div>
</div>
